<lnstrecipe>
	<network>
		<host id="client">
            <params>
                <param name="os" value="rhel7"/>
            </params>
			<interfaces>
				<eth id="nic1" label="inet">
					<addresses>
						<address value="192.168.200.3/24"/>
					</addresses>
				</eth>
			</interfaces>
		</host>
	</network>
	<task>
		<run module="IcmpPing" host="client">
			<options>
				<option name="addr" value="{ip(lb,nic1)}"/>
				<option name="count" value="40"/>
			</options>
		</run>
	</task>
</lnstrecipe>
